# Rewrite rules for Expert Local
# Enable RewriteEngine
RewriteEngine On
RewriteBase /

# Redirect .html URLs to non-.html (301 permanent redirect)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.+)\.html$ /$1 [R=301,L]

# If the request file doesn't exist but .html exists, serve it
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ /$1.html [L]

# Force trailing slash for directories (optional)
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.*)/$ /$1 [R=301,L]
